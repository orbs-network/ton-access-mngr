{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "preserve",
    "outDir": "out",
    "sourceMap": true
  },
  "include": [
    "./src",
    "./src/**/*.json"
  ]
}